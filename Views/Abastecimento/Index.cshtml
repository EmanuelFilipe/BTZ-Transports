@model IEnumerable<AbastecimentoViewModel>
@{
	ViewData["Title"] = "Lista de Abastecimentos";
}

<h1>@ViewData["Title"]</h1>

<p style="margin-bottom: 60px;">
	<a class="fa-pull-right btn btn-outline-primary fa fa-plus" asp-action="Create"> Novo</a>
</p>

<table class="table table-hover table-striped">
	<thead class="thead-dark">
		<tr>
			<th class="colRenavam">@Html.DisplayNameFor(model => model.Veiculo.NomeVeiculo)</th>
			<th class="colModelo">@Html.DisplayNameFor(model => model.Motorista.Nome)</th>
			<th class="colQuilometragem">@Html.DisplayNameFor(model => model.Data)</th>
			<th class="colValor">@Html.DisplayNameFor(model => model.Combustivel.Nome)</th>
			<th class="colStatus">@Html.DisplayNameFor(model => model.QuantidadeAbastecida)</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model?.Count() > 0)
		{
			foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayTextFor(modelItem => item.Veiculo.NomeVeiculo)</td>
					<td>@Html.DisplayTextFor(modelItem => item.Motorista.Nome)</td>
					<td>@Html.DisplayTextFor(modelItem => item.Data)</td>
					<td>@Html.DisplayTextFor(modelItem => item.Combustivel.Nome)</td>
					<td>@Html.DisplayTextFor(modelItem => item.QuantidadeAbastecida)</td>
					<td class="text-right">
						<a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id" title="Visualizar"><span class="fa fa-search"></span></a>
					</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td colspan="6" class="text-center">
					<span><strong style="color: red">Sem dados</strong></span>
				</td>

			</tr>
		}
	</tbody>
</table>