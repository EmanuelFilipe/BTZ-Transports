@model VeiculoViewModel

@{
    ViewData["Title"] = "Visualizar Veículo";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form>

            <div class="row mb-3">
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Placa" class="control-label"></label>
                        <input asp-for="Placa" class="form-control" maxlength="7" disabled />
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="NomeVeiculo" class="control-label"></label>
                        <input asp-for="NomeVeiculo" class="form-control" maxlength="20" disabled />
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Fabricante" class="control-label"></label>
                        <input asp-for="Fabricante" class="form-control" maxlength="50" disabled />
                    </div>
                </div>

            </div>


            <div class="row mb-3">
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="combustivelId" class="control-label"></label>
                        @Html.DropDownList("combustivelId", ViewBag.ListaCombustiveisSelectList as SelectList, "Selecione", new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>


                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="AnoFabricacao" class="control-label"></label>
                        <input asp-for="AnoFabricacao" class="form-control" type="number" placeholder="9999" disabled />
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="CapacidadeMaximaTanque" class="control-label"></label>
                        <div class="input-group">
                            <input id="quilometragem" type="text" asp-for="CapacidadeMaximaTanque" class="form-control" disabled />
                            <div class="input-group-prepend">
                                <div class="input-group-text">litros</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Observacoes" class="control-label"></label>
                        <textarea asp-for="Observacoes" class="form-control" rows="5" maxlength="2000" disabled></textarea>
                    </div>
                </div>

            </div>


            <hr />
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>