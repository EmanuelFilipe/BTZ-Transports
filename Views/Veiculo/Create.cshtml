@model VeiculoViewModel

@{
	ViewData["Title"] = "Novo Veículo";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
	<div class="col-md-12">
		<form asp-action="Create">

			<div class="row mb-3">
				<div class="col-md-2">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="Placa" class="control-label"></label>
						<input asp-for="Placa" class="form-control" maxlength="7" />
						<span asp-validation-for="Placa" class="text-danger"></span>
					</div>
				</div>

				<div class="col-md-5">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="NomeVeiculo" class="control-label"></label>
						<input asp-for="NomeVeiculo" class="form-control" maxlength="20" />
						<span asp-validation-for="NomeVeiculo" class="text-danger"></span>
					</div>
				</div>

				<div class="col-md-5">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="Fabricante" class="control-label"></label>
						<input asp-for="Fabricante" class="form-control" maxlength="50" />
						<span asp-validation-for="Fabricante" class="text-danger"></span>
					</div>
				</div>

			</div>


			<div class="row mb-3">
				@if (ViewBag.ListaCombustiveisSelectList != null)
				{
					<div class="col-md-2">
						<div class="form-group">
							<span class="colorRed">* </span><label asp-for="combustivelId" class="control-label"></label>
							@Html.DropDownList("combustivelId", ViewBag.ListaCombustiveisSelectList as SelectList, "Selecione", new { @class = "form-control" })
							<span asp-validation-for="combustivelId" class="text-danger"></span>
						</div>
					</div>
				}
				

				<div class="col-md-2">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="AnoFabricacao" class="control-label"></label>
						<input asp-for="AnoFabricacao" class="form-control" type="number" placeholder="9999" />
						<span asp-validation-for="AnoFabricacao" class="text-danger"></span>
					</div>
				</div>

				<div class="col-md-3">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="CapacidadeMaximaTanque" class="control-label"></label>
						<div class="input-group">
							<input id="quilometragem" type="text" asp-for="CapacidadeMaximaTanque" class="form-control" />
							<div class="input-group-prepend">
								<div class="input-group-text">litros</div>
							</div>
						</div>
						<span asp-validation-for="CapacidadeMaximaTanque" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="row mb-3">
				<div class="col-md-12">
					<div class="form-group">
						<label asp-for="Observacoes" class="control-label"></label>
						<textarea asp-for="Observacoes" class="form-control" rows="5" maxlength="2000"></textarea>
						<span asp-validation-for="Observacoes" class="text-danger"></span>
					</div>
				</div>

			</div>


			<hr />
			<div class="form-group">
				<a class="btn btn-secondary" asp-action="Index">Voltar</a>
				<input type="submit" value="Salvar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>