@model MotoristaViewModel

@{
	ViewData["Title"] = "Visualizar Motorista";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
	<div class="col-md-12">
		<form>

			<div class="row mb-3">
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Nome" class="control-label"></label>
						<input asp-for="Nome" class="form-control" maxlength="50" disabled />
					</div>
				</div>

				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="CPF" class="control-label"></label>
						<input id="cpf" asp-for="CPF" class="form-control" disabled />
					</div>
				</div>

				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="NumeroCNH" class="control-label"></label>
						<input asp-for="NumeroCNH" class="form-control" maxlength="40" disabled />
					</div>
				</div>
			</div>


			<div class="row mb-3">
				<div class="col-md-3">
					<div class="bs-example" data-example-ids="select-form-control">
						<label asp-for="CategoriaCNH" class="control-label"></label>
						<select class="form-control" asp-for="CategoriaCNH" disabled>
							<option value="" selected>Selecione</option>
							<option value="A">A</option>
							<option value="B">B</option>
							<option value="C">C</option>
							<option value="D">D</option>
							<option value="E">E</option>
						</select>
					</div>
				</div>

				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="DataNascimento" class="control-label"></label>
						<input id="cep" asp-for="DataNascimento" class="form-control" type="date" disabled />
					</div>
				</div>

				<div class="col-md-3">
					<div class="bs-example" data-example-ids="select-form-control">
						<label asp-for="CodStatus" class="control-label"></label>
						<select class="form-control" asp-for="CodStatus" disabled>
							<option value="" selected>Selecione</option>
							<option value="1">Ativo</option>
							<option value="0">Inativo</option>
						</select>
					</div>
				</div>

			</div>

			<hr />
			<div class="form-group">
				<a class="btn btn-secondary" asp-action="Index">Voltar</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/jquery.mask/jquery.mask.js"></script>
	<script src="~/js/local/Motorista.js"></script>
}