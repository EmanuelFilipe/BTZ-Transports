@model MotoristaViewModel

@{
	ViewData["Title"] = "Novo Motorista";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
	<div class="col-md-12">
		<form asp-action="Create">

			<div class="row mb-3">
				<div class="col-md-6">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="Nome" class="control-label"></label>
						<input asp-for="Nome" class="form-control" maxlength="50" />
						<span asp-validation-for="Nome" class="text-danger"></span>
					</div>
				</div>

				<div class="col-md-3">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="CPF" class="control-label"></label>
						<input id="cpf" asp-for="CPF" class="form-control" maxlength="14" placeholder="999.999.999-99" />
						<span asp-validation-for="CPF" class="text-danger"></span>
					</div>
				</div>

				<div class="col-md-3">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="NumeroCNH" class="control-label"></label>
						<input asp-for="NumeroCNH" class="form-control" maxlength="40" />
						<span asp-validation-for="NumeroCNH" class="text-danger"></span>
					</div>
				</div>

			</div>


			<div class="row mb-3">
				<div class="col-md-3">
					<div class="bs-example" data-example-ids="select-form-control">
						<span class="colorRed">* </span><label asp-for="CategoriaCNH" class="control-label"></label>
						<select class="form-control" asp-for="CategoriaCNH">
							<option value="" selected>-- Selecione --</option>
							<option value="A">A</option>
							<option value="B">B</option>
							<option value="C">C</option>
							<option value="D">D</option>
							<option value="E">E</option>
						</select>
						<span asp-validation-for="CategoriaCNH" class="text-danger"></span>
					</div>
				</div>

				<div class="col-md-3">
					<div class="form-group">
						<span class="colorRed">* </span><label asp-for="DataNascimento" class="control-label"></label>
						<input id="cep" asp-for="DataNascimento" class="form-control" type="date" />
						<span asp-validation-for="DataNascimento" class="text-danger"></span>
					</div>
				</div>

				<div class="col-md-3">
					<div class="bs-example" data-example-ids="select-form-control">
						<span class="colorRed">* </span><label asp-for="CodStatus" class="control-label"></label>
						<select class="form-control" asp-for="CodStatus">
							<option value="" selected>-- Selecione --</option>
							<option value="1">Ativo</option>
							<option value="0">Inativo</option>
						</select>
						<span asp-validation-for="CodStatus" class="text-danger"></span>
					</div>
				</div>
			</div>

			<hr />
			<div class="form-group">
				<a class="btn btn-secondary" asp-action="Index">Voltar</a>
				<input type="submit" value="Salvar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery.mask/jquery.mask.js"></script>
	<script src="~/js/local/Motorista.js"></script>
}